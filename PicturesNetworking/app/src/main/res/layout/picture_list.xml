<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/search"
            android:ems="10"
            android:id="@+id/search_bar" android:autofillHints="" tools:targetApi="o"/>

    <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/picture_list"
            android:name="com.tikhova.picturesnetworking.PictureListFragment"
            android:layout_width="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:context=".PictureListActivity"
            tools:listitem="@layout/picture_list_content"
            android:scrollbars="vertical"
            android:layout_height="match_parent"/>

</android.widget.LinearLayout>