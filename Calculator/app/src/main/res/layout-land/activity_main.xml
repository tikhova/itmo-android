<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:textColor="@color/textColor"
                android:textSize="40dp" />
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/borderColor"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mul"
                style="@style/Button"
                android:text="@string/mul" />

            <TextView
                android:id="@+id/number7"
                style="@style/Button"
                android:text="@string/number7" />

            <TextView
                android:id="@+id/number8"
                style="@style/Button"
                android:text="@string/number8" />

            <TextView
                android:id="@+id/number9"
                style="@style/Button"
                android:text="@string/number9" />

            <TextView
                android:id="@+id/clear"
                style="@style/Button"
                android:text="@string/clear" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/borderColor"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/div"
                style="@style/Button"
                android:text="@string/div" />

            <TextView
                android:id="@+id/number4"
                style="@style/Button"
                android:text="@string/number4" />

            <TextView
                android:id="@+id/number5"
                style="@style/Button"
                android:text="@string/number5" />

            <TextView
                android:id="@+id/number6"
                style="@style/Button"
                android:text="@string/number6" />

            <TextView
                android:id="@+id/sub"
                style="@style/Button"
                android:text="@string/sub" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/borderColor"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/open_bracket"
                style="@style/Button"
                android:text="@string/open_bracket" />

            <TextView
                android:id="@+id/number1"
                style="@style/Button"
                android:text="@string/number1" />

            <TextView
                android:id="@+id/number2"
                style="@style/Button"
                android:text="@string/number2" />

            <TextView
                android:id="@+id/number3"
                style="@style/Button"
                android:text="@string/number3" />

            <TextView
                android:id="@+id/add"
                style="@style/Button"
                android:text="@string/add" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/borderColor"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/close_bracket"
                style="@style/Button"
                android:text="@string/close_bracket" />

            <TextView
                android:id="@+id/dot"
                style="@style/Button"
                android:text="@string/dot" />

            <TextView
                android:id="@+id/number0"
                style="@style/Button"
                android:text="@string/number0" />

            <ImageView
                android:id="@+id/back"
                style="@style/Button"
                android:src="@drawable/back"
                android:scaleType="center"/>

            <TextView
                android:id="@+id/equals"
                style="@style/Button"
                android:text="@string/equality"
                android:background="@color/colorPrimary"/>
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>